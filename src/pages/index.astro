---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import DiscoverImage from './photo-1519389950473-47ba0277781c.png';

const metadata = {
  title: 'AskInternally — Experience our AI-powered platform: interact with your AI assistant, run models offline, and chat using your data — all locally and privately.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <div className="ellipseDiv"></div>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:click',
      },
      { text: 'Sign in with Google', 
        href: '#features', 
        icon: 'tabler:brand-google',
        },
    ]}
    
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight"> AskInternally, </span> Your Offline AI
        Knowledge Assistant
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Experience our AI-powered platform: interact with your AI assistant, run models offline, and chat using your data — all locally and privately.
      </span>
      
    </Fragment>
  </Hero>

  
  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with AskInternally"
    subtitle="A range of features to simplify interaction with your AI assistant. Discover what you can do."
    items={[
      {
        title: 'Offline AI Models',
        description:
          'Users can download and run AI models on their local machines, ensuring data privacy and security.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Model-agnostic',
        description:
          'Our platform will support various AI Models, allowing users to choose the best model for their needs...',
        icon: 'tabler:components',
      },
      {
        title: 'Fine-tuning & Model Marketplace',
        description:
          'Users and developers can fine-tune models and sell them on our platform, creating a thriving ecosystem of AII models.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Efficient Data Storage ',
        description:
          'We will develop competitive solutions to store and retrieve data for RAG applications, ensuring optimal performance. ',
        icon: 'tabler:rocket',
      },
      
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Discover"
    title="AskInternally’s Landscape & Positioning "
    items={[
      {
        title: 'Explosive Growth Projection',
        description:
          'The global marketplace is expected to reach %1.6 trillion by 2030',
      },
      {
        title: 'Rising Demand for Privacy',
        description:
          'Increasing concerns about data privacy and security drive market trends.',
      },
      {
        title: 'Strategic Market Positioning',
        description:
          'Our offline AI platform poised to dominate a significant market share.',
      },
    ]}
    
