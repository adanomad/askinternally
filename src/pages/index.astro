    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->
  
  <Content
    isAfterContent
    items={[
      {
        title: 'Pioneering Offline AI Experience',
